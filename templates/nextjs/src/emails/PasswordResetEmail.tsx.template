    <Text>
      To reset your password, please click the button below:
    </Text>
    <Button href={resetLink}>
      Reset Password
    </Button>
    <Text>
      This link will expire in 1 hour.
    </Text>
    <Hr />
    <Text>The {projectName} Team</Text>
  </Html>
