  projectName?: string;
}

export const PasswordResetEmail: React.FC<Readonly<PasswordResetEmailProps>> = ({
  userName = 'User',
  resetLink,
  projectName = 'Our Awesome App',
}) => (
  <Html lang="en">
    <Heading as="h1">Reset Your {projectName} Password</Heading>
    <Text>Hi {userName},</Text>
